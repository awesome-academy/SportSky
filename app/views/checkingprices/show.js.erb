function update_schedule_form() {
    $('#schedule_date').val('<%= @date %>');
    $('#schedule_timeframe_id').val('<%= @timeframe_id %>')
}
<% if @price and @price.is_a?Integer %>
  $('.pitch-cost').text(parseInt('<%= j @price.to_s %>').toLocaleString());
  $('.notification').addClass('hidden');
  update_schedule_form();
<% else %>
  $(".pitch-cost").text('<%= j t "pitch.show.contact" %>');
  $('.notification').removeClass('hidden');
  update_schedule_form();
<% end %>
